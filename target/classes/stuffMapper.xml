<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.camping.stuff.StuffMapper">

	<insert id="insertStuff"
		parameterType="com.project.camping.stuff.StuffDTO">
		insert into stuff values (stuff_seq.nextval,
		#{s_productId},#{s_category},#{s_detail_category},#{s_title},#{s_image},#{s_brand},#{s_price})
	</insert>

	<select id="getAllStuff"
		resultType="com.project.camping.stuff.StuffDTO">
		select * from stuff order by s_image
	</select>

	<select id="getDetailStuff"
		resultType="com.project.camping.stuff.StuffDTO"
		parameterType="com.project.camping.stuff.StuffDTO">
		select * from stuff where s_no=#{s_no}
	</select>

	<select id="getSearchStuff"
		parameterType="com.project.camping.stuff.StuffSearchDTO"
		resultType="com.project.camping.stuff.StuffDTO">
		select * from stuff where s_category like '%'||#{stuffs}||'%' or s_title
		like '%'||#{stuffs}||'%'or s_detail_category like '%'||#{stuffs}||'%'
	</select>

	<select id="getALlCartstuff"
		parameterType="com.project.camping.account.AccountDTO"
		resultType="com.project.camping.stuff.CartDTO">
		select sc_cart_id, s_title,s_price,s_image, sc_amount
		from stuff, stuff_cart, account
		where account.ac_id = stuff_cart.sc_user_id and
		stuff.s_no = stuff_cart.sc_stuff_no and
		account.ac_id = #{ac_id}
	</select>
	<delete id="deleteCartItem" parameterType="com.project.camping.stuff.CartDTO">
		delete stuff_cart where sc_cart_id = #{sc_cart_id}
	</delete>
	
	<select id="getCartsPayment" parameterType="String" resultType="com.project.camping.stuff.CartDTO">
		select sc_cart_id, s_title,s_price,s_image, sc_amount
		from stuff, stuff_cart, account
		where account.ac_id = stuff_cart.sc_user_id and
		stuff.s_no = stuff_cart.sc_stuff_no and
		sc_cart_id = #{sc_cart_id}
	</select>
	
	<insert id="insertCart" parameterType="com.project.camping.stuff.CartDTO">
	insert  into stuff_cart values(stuff_cart_seq.nextval,#{sc_user_id},#{sc_stuff_no},#{sc_amount})
		
	</insert>
	

	<select id="getStuff" parameterType="com.project.camping.stuff.StuffDTO" resultType="com.project.camping.stuff.StuffDTO">
		select * from stuff where s_no = #{s_no}
	</select>
	
	<select id="getOrderItem" parameterType="com.project.camping.stuff.CartDTO" resultType="com.project.camping.stuff.CartDTO">
		select sc_cart_id, sc_user_id, sc_stuff_no, sc_amount, s_title, s_image, s_price 
		from stuff, stuff_cart 
		where s_no = sc_stuff_no 
		and sc_cart_id = #{sc_cart_id} 
	</select>
	
	<insert id="insertOrderStuff" parameterType="com.project.camping.stuff.StuffOrderDTO">
		insert into stuff_order values(stuff_order_seq.nextval,#{so_user_id},#{so_user_zoncode},#{so_user_addr},#{so_user_detailAddr},sysdate)
	</insert>
	
	<select id="getOrderNum" parameterType="com.project.camping.account.AccountDTO" resultType="com.project.camping.stuff.StuffOrderDTO">
		select * from stuff_order where so_user_id = #{ac_id} order by so_date desc
	</select>
	
	<insert id="insertOrderList" parameterType="com.project.camping.stuff.CartDTO">
		insert into stuff_order_items values(stuff_order_items_seq.nextval, #{order_no},#{sc_stuff_no},#{sc_amount})
	</insert>
	
	<delete id="deleteCart" parameterType="com.project.camping.stuff.CartDTO">
		delete stuff_cart where sc_cart_id = #{sc_cart_id}
	</delete>
	
	
		</mapper>